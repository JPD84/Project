<h2>Edit <%= @gym_session.name %></h2>
<form method="POST" action="/gym_sessions/<%= @gym_session.id %>">
  <div class="form-wrapper">

    <div class="edit_session_name">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @gym_session.name %>" required />
    </div>

    <div class="edit_session_type">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type" value="<%= @gym_session.type %>" required />
    </div>

    <div class="btn">
      <input class="btn" type="submit" value="Edit Gym Session"/>
    </div>
